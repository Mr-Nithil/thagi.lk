@model List<Category>

<div class="container">

    <div class="row pt-3 pb-3">
        <div class="col-6">
            <h2 class="text-dark">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder)){
            <tr>
                <td>@obj.CategoryName</td>
                <td>@obj.DisplayOrder</td>
                <td>
                     <div class="d-flex justify-content-center">
                        <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-dark btn-sm mx-2 rounded">
                                <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger btn-sm mx-2 rounded">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    
</table>

</div>
