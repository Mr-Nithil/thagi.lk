@model ShoppingCartVM

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h4 class="pt-2 text-dark">
                        SHOPPING CART
                    </h4>
                </div>

            </div>
        </div>
        <div class="card-body my-4">

            <div class="row mb-2 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-dark text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>
                <div class="col-md-12 offset-md-1">

                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="@item.Product.ImageUrl" class="rounded" width="100%"/>
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <div class="col-12 ml-3">
                                    <h5 class="text-uppercase text-Dark opacity-75"><strong>@item.Product.ProductName</strong></h5>
                                    <p class="text-Dark opacity-50"><small>@item.Product.ProductDescription</small></p>
                                </div>
                            </div>
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-10 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        Rs. @item.Product.DiscountPrice.00
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                    </h6>
                                </div>
                            </div>

                        </div>
                    }
                </div>


            </div>

            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase"> Total (Rs.)</h5>
                                <h4 class="text-dark fw-bolder">Rs. @Model.OrderTotal.00</h4>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
</form>
