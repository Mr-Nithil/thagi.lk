@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.ProductName</p>
                                <p class="card-title text-secondary text-center text-decoration-line-through">Rs. @product.Price.00 </p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title text-warning text-center">Rs. @product.DiscountPrice.00 </p>
                            </div>
                        </div>
                        <div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-dark bg-gradient border-0 form-control">
                                    Details
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-dark bg-gradient border-0 form-control" href="/Identity/Account/Login">
                                    Details
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>